@model RegisterUserModel
@{
    ViewData["Title"] = "Registration Completed";
    string blur(string original)
    {
        return new string('*', original.Length);
    }
}


<div>
    <h1 class="text-center">Thank you!</h1>
    <div class="container">
        <div class="container hidden-section float-right">
            @Model.values[RegisterUserModel.FIRST_NAME] @Model.values[RegisterUserModel.LAST_NAME]<br />
            Username: @Model.values[RegisterUserModel.USERNAME]<br />
            Email: @Model.values[RegisterUserModel.EMAIL]<br />
            Password: @blur(Model.values[RegisterUserModel.PASSWORD])<br />
            Planet of Origin: @Model.values[RegisterUserModel.HOME_PLANET]<br />
            Current Captain: @Model.values[RegisterUserModel.CURRENT_CAPTAIN]<br />
        </div>
        <div>
            <p>
                An email will be sent to you shortly containing your registration information, hidden to the right. You can hover over it to see it here if you cannot wait for the email.
            </p>
            <p>
                Now that you have registered for Intergalacic Drinks we are pleased to offer you access to our shop where you can order a drink made from our Nutrimatic Drinks Dispensers, and if you can't stop be we can deliver it to you.
            </p>
            <form action="/Shop/" method="post">
                @for (int index = 0; index < Model.fields.Count; index++)
                {
                    <input style="display: none" type="@Model.types[index]" id="@Model.fields[index]" name="@Model.fields[index]" value="@Model.values[index]" required />
                }
                <input class="btn btn-dark" type="submit" value="Shop" />
            </form>
        </div>

    </div>
</div>
<div class="footer-dynamic">*Taste may not be quite exactly like you remember, if the drink lets you remember what it tastes like.</div>